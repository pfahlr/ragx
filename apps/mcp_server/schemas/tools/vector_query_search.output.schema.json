{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "vector.query.search output",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "query": {"type": "string"},
    "total": {"type": "integer", "minimum": 0},
    "hits": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {"type": "string"},
          "score": {"type": "number"},
          "rank": {"type": "integer", "minimum": 1},
          "document": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "title": {"type": "string"},
              "snippet": {"type": "string"},
              "sourcePath": {"type": "string", "format": "uri-reference"}
            },
            "required": ["title", "snippet", "sourcePath"]
          }
        },
        "required": ["id", "score", "rank", "document"]
      }
    }
  },
  "required": ["query", "hits", "total"]
}
