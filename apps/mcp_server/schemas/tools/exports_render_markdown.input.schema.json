{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Exports Render Markdown Input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "template": {
      "type": "string",
      "minLength": 1
    },
    "body": {
      "type": "string",
      "default": ""
    },
    "front_matter": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "authors": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "title",
    "template"
  ]
}
