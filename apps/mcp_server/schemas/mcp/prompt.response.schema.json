{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Prompt Response",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "description", "version", "messages"],
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "description": {"type": "string"},
    "version": {
      "type": "object",
      "additionalProperties": false,
      "required": ["major"],
      "properties": {"major": {"type": "integer", "minimum": 1}}
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["role", "content"],
        "properties": {
          "role": {"type": "string"},
          "content": {"type": "string"}
        }
      }
    }
  }
}
