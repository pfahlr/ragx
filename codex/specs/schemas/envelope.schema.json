{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ragx.ai/schemas/mcp/envelope.schema.json",
  "title": "MCP JSON-RPC Envelope",
  "type": "object",
  "required": [
    "jsonrpc",
    "id"
  ],
  "properties": {
    "jsonrpc": {
      "const": "2.0"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string",
      "minLength": 1
    },
    "params": {
      "type": "object"
    },
    "result": {
      "type": [
        "object",
        "array",
        "string",
        "number",
        "boolean",
        "null"
      ]
    },
    "error": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string",
          "minLength": 1
        },
        "message": {
          "type": "string",
          "minLength": 1
        },
        "data": {
          "type": [
            "object",
            "null"
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "required": [
          "method"
        ]
      },
      "then": {
        "required": [
          "params"
        ],
        "properties": {
          "params": {
            "type": "object"
          }
        }
      }
    },
    {
      "if": {
        "required": [
          "result"
        ]
      },
      "then": {
        "not": {
          "required": [
            "error"
          ]
        }
      }
    },
    {
      "if": {
        "required": [
          "error"
        ]
      },
      "then": {
        "not": {
          "required": [
            "result"
          ]
        }
      }
    }
  ],
  "oneOf": [
    {
      "required": [
        "method"
      ]
    },
    {
      "required": [
        "result"
      ]
    },
    {
      "required": [
        "error"
      ]
    }
  ]
}
