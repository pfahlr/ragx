{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ragx.ai/schemas/mcp/tool_io.schema.json",
  "title": "MCP Tool IO Schema",
  "type": "object",
  "required": [
    "tool"
  ],
  "properties": {
    "tool": {
      "type": "string",
      "minLength": 1
    },
    "input": {
      "type": "object",
      "additionalProperties": true
    },
    "output": {
      "type": "object",
      "required": [
        "content"
      ],
      "properties": {
        "content": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "minLength": 1
              },
              "text": {
                "type": "string"
              },
              "annotations": {
                "type": "array"
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "oneOf": [
    {
      "required": [
        "input"
      ]
    },
    {
      "required": [
        "output"
      ]
    }
  ]
}
