{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ragx/dsl/v1/flow.schema.json",
  "title": "RAGX DSL v1 Flow",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "seed": {
      "type": "integer"
    },
    "budget": {
      "type": "object",
      "properties": {
        "usd": {
          "type": "number",
          "minimum": 0
        },
        "tokens": {
          "type": "integer",
          "minimum": 0
        },
        "calls": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "usd",
        "tokens",
        "calls"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "./node.schema.json"
      },
      "minItems": 2
    }
  },
  "required": [
    "version",
    "id",
    "seed",
    "budget",
    "nodes"
  ],
  "additionalProperties": false
}